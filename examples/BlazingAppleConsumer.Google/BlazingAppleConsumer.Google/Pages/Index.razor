@page "/"
@using BlazingApple.Google.Components

<PageTitle>Welcome to BlazingApple's Google Package</PageTitle>

<div style="position:sticky; top:0px; background-color:white;" class="my-2">
    <EditForm Model="@(new {})" OnValidSubmit="GetTweets">
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label for="name">Api Key</label>
                    <InputText id="name" class="form-control" @bind-Value="@ApiKey"></InputText>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="form-group">
                    <label for="list">Place Id <small class="text-muted">(1320814865225863172)</small></label>
                    <InputText id="list" class="form-control" @bind-Value="@PlaceId"></InputText>
                </div>
            </div>
        </div>
        <div class="row my-2">
            <div class="col-lg-12 d-flex justify-content-center">
                <button class="btn btn-primary" type="submit">Get reviews</button>
            </div>
        </div>
    </EditForm>
    <hr />
</div>
@if (_reviews is not null)
{
    <div class="my-2">
        <ReviewCarousel Reviews="_reviews"></ReviewCarousel>
    </div>
}